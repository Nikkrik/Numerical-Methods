#include <iostream>
#include <cmath>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");
	double x = 1.0;
	double h = 0.0001;

	cout << "(Правая разностная производная) Производная Sin(x) в точке " << x << " = " << (sin(x + h) - sin(x)) / h << endl;
	cout << "(Левая разностная производная) Производная Sin(x) в точке " << x << " = " << (sin(x) - sin(x - h)) / h << endl;
	cout << "(Центральная разностная производная) Производная Sin(x) в точке " << x << " = " << (sin(x + h) - sin(x - h)) / (2*h) << endl;
	cout << "(Вторая разностная производная) Производная Sin(x) в точке " << x << " = " << (sin(x + h) - (2*sin(x)) + sin(x - h)) / (h*h) << endl;

	return 0;
}
